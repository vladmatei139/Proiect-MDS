<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/dropdown.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MAXICLIP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
 </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"><li class="dropdown">
                  @Html.ActionLink("Categories", "Index", "Home")
                     <div class="dropdown-content">
                             <a>@Html.ActionLink("Action", "Action", "Home")</a>
                             <a> @Html.ActionLink("Memory and Strategy", "MemStra", "Home")</a>
                             <a>@Html.ActionLink("Arcade", "Arcade", "Home")</a>
                        </div>

</li>
                </ul>                             

                @Html.Partial("_LoginPartial")


            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p id="copyright">&copy; @DateTime.Now.Year MAXICLIP ORGINIAL PRODUCTION </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts",false)
</body>
</html>